<% include ../partials/header.ejs %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p> View our hand-picked campgrounds from all over the world </p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add a new campground </a>
        </p>
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% for(i = 0; i < campgrounds.length; i++) { %>
        <div class="col-md-3 col-sm-6">
          <!-- SO that when resize it's not retarded-->
          <div class="thumbnail">
            <img src=" <%= campgrounds[i].image %>">
            <div class="caption">
              <h4>  <%= campgrounds[i].name %> </h4>
            </div>
            <p>
              <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary"> More Information </a>
            </p>
          </div>

        </div>
        <% } %>
    </div>
  </div>
  <% include ../partials/footer.ejs %>
